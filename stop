#!/usr/bin/env sh
set -e
projectRoot="$(a="/$0"; a=${a%/*}; a=${a:-.}; a=${a#/}/; cd "$a/.." || return; pwd)"

show_help() {
  echo "
    Usage: scripts/test [OPTION...]
    Build and run SFI services.

    Options:
      -p, --payments   include payment services
      -g, --gateway    include API gateway
      -h, --help       display this help text
    "
}

while :; do
  case $1 in
    -p|--payments)
      payments="true"
      ;;

    -g|--gateway)
      gateway="true"
      ;;

    -h|--help)   # Call a "show_help" function to display a synopsis, then exit.
      show_help
      exit
      ;;
    *)
      break
  esac

  shift
done

cd "${projectRoot}"
cd ./ffc-sfi-apply-web && \
  docker-compose down
cd "${projectRoot}"
cd ./ffc-sfi-agreement-api && \
  docker-compose down
cd "${projectRoot}"
cd ./ffc-sfi-agreement-calculator && \
  docker-compose down
cd "${projectRoot}"
cd ./ffc-sfi-processing-web && \
  docker-compose down

if [ "${payments}" = "true" ]; then
  cd "${projectRoot}"
  cd ./ffc-pay-batch-processor && \
    docker-compose down
  cd "${projectRoot}"
  cd ./ffc-pay-enrichment && \
    docker-compose down
  cd "${projectRoot}"
  cd ./ffc-pay-processing && \
    docker-compose down
  cd "${projectRoot}"
  cd ./ffc-pay-submission && \
    docker-compose down
  cd "${projectRoot}"
  cd ./ffc-pay-responses && \
    docker-compose down
  cd "${projectRoot}"
  cd ./ffc-pay-web && \
    docker-compose down
fi

if [ "${gateway}" = "true" ]; then
  cd "${projectRoot}"
  cd ./ffc-sfi-api-gateway && \
    docker-compose down
fi
